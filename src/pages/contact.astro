---
import Layout from '../layouts/Layout.astro';
import { Form } from '../components/Form';
import MapForm from '../components/MapForm.astro'

const title = 'Contacto - Casa de Campo LA HERMINDA';
---

<!-- Contact -->
<Layout {title}>
    <section class="flex md:flex-row items-center justify-center w-full flex-col box-border gap-5">
        <Form />
        <article class="flex flex-col items-center justify-center w-full md:w-1/2 h-full gap-8">
            <div class="flex flex-col items-center justify-center w-full">
                <h3 class="text-2xl font-semibold italic p-2">Ubicacion</h3>
                <MapForm />
            </div>
            <div class="flex flex-col justify-center w-full">
                <h3 class="text-2xl font-semibold italic p-2">Links</h3>
                <ul>
                    <li><a>Estado de Rutas</a></li>
                    <li><a>Pronostico del tiempo</a></li>
                    <li><a>Info de Nono</a></li>
                </ul>                
            </div>
        </article>
    </section>       
</Layout>
